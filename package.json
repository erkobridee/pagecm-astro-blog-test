{
  "name": "pagecm-astro-blog-test",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "unset:git-hooks-path": "git config --unset core.hooksPath",
    "simple-git-hooks": "npx simple-git-hooks",
    "postinstall": "is-ci || npm run simple-git-hooks",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build && jampack ./dist",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --check . --plugin=prettier-plugin-astro",
    "format": "prettier --write . --plugin=prettier-plugin-astro",
    "cz": "cz",
    "lint": "eslint .",
    "gh-pages-build": "cross-env GITHUB_PAGES=true npm run build",
    "gh-pages-preview": "cross-env GITHUB_PAGES=true GITHUB_PAGES_PREVIEW=true npm run preview"
  },
  "dependencies": {
    "@astrojs/mdx": "3.1.9",
    "@astrojs/check": "0.9.4",
    "@astrojs/rss": "4.0.11",
    "@resvg/resvg-js": "2.6.2",
    "astro": "4.16.18",
    "fuse.js": "7.1.0",
    "github-slugger": "2.0.0",
    "remark-collapse": "0.1.2",
    "remark-toc": "9.0.0",
    "satori": "0.13.1",
    "tailwindcss": "3.4.17",
    "typescript": "5.8.3"
  },
  "devDependencies": {
    "@astrojs/react": "3.6.3",
    "@astrojs/sitemap": "3.4.0",
    "@astrojs/tailwind": "5.1.5",
    "@divriots/jampack": "0.33.1",
    "@tailwindcss/typography": "0.5.16",
    "@types/github-slugger": "2.0.0",
    "@types/react": "18.3.23",
    "@typescript-eslint/parser": "6.21.0",
    "astro-eslint-parser": "1.2.2",
    "commitizen": "4.3.1",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.1",
    "eslint-plugin-astro": "1.3.1",
    "is-ci": "4.1.0",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.6.11",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "simple-git-hooks": "2.13.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md,mdx,json,astro}": [
      "prettier --write --plugin=prettier-plugin-astro"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  }
}
